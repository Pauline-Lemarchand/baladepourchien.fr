{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="h1-form">Créer compte utilisateur</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'formulaire'}}) }}
     {{ form_row(registrationForm.nameUser, {'attr': {'class': 'user'}}) }}
      {{ form_row(registrationForm.firstnameUser, {'attr': {'class': 'user'}}) }}
       {{ form_row(registrationForm.phoneUser, {'attr': {'class': 'user'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'user'}}) }}
        {{ form_row(registrationForm.plainPassword,{'attr': {'class': 'user'}} ) }}
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'agreeuser'}}) }}

        <button type="submit" class="btn-register">Enregistrés</button>
    {{ form_end(registrationForm) }}
{% endblock %}
