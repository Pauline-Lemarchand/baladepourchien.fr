{% extends 'base.html.twig' %}

{% block title %}Groupes{% endblock %}

{% block body %}
<div class="archi_dash">
<a class="retour_btn" href="{{ path('dashboard') }}"> <i class="fa-solid fa-arrow-left"></i>RETOUR </a>
    <h1>Groupes</h1>

    <table class="table">
        <thead>
            <tr>
              
                <th>Nom du groupe</th>
                <th>Zone de balade</th>
                <th>Nombre de membre</th>
             
            </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
             
                <td>{{ groupe.nameGroupe }}</td>
                <td>{{ groupe.areaGroupe }}</td>
                <td></td>
                <td>
                  
                    <a class="btn" href="{{ path('app_groupes_edit', {'id': groupe.id}) }}">Modifier</a>
                    {{ include('groupes/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_groupes_new') }}">Cr√©er un nouveau groupe</a>
      </div>
{% endblock %}
