{% extends 'base.html.twig' %}

{% block title %}Dangers{% endblock %}

{% block body %}
<div class="archi_dash">
<a class="retour_btn" href="{{ path('dashboard') }}"> <i class="fa-solid fa-arrow-left"></i>RETOUR </a>
    <h1>Dangers</h1>

    <table class="table">
        <thead>
            <tr>
               
                <th>Zone du danger</th>
                <th>Nom du danger</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for danger in dangers %}
            <tr>
                
                <td>{{ danger.areaDanger }}</td>
                <td>{{ danger.nameDanger }}</td>
                <td>
                  
                    <a class="btn" href="{{ path('app_dangers_edit', {'id': danger.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_dangers_new') }}">Ajouter un danger</a>
     </div>
{% endblock %}
