{% extends 'base.html.twig' %}

{% block title %}Dangers index{% endblock %}

{% block body %}
    <h1>Dangers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AreaDanger</th>
                <th>NameDanger</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for danger in dangers %}
            <tr>
                <td>{{ danger.id }}</td>
                <td>{{ danger.areaDanger }}</td>
                <td>{{ danger.nameDanger }}</td>
                <td>
                    <a href="{{ path('app_dangers_show', {'id': danger.id}) }}">show</a>
                    <a href="{{ path('app_dangers_edit', {'id': danger.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dangers_new') }}">Create new</a>
{% endblock %}
