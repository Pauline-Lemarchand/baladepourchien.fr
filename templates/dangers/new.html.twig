{% extends 'base.html.twig' %}

{% block title %}Nouveau danger{% endblock %}

{% block body %}
<div class="block-edit">
    <h1>Ajouter un nouveau danger</h1>

    {{ form_start(form, {'attr': {'class': 'formulaire'}}) }}
    <div class="block_edit_user">

        <div class="form-group">
            {{ form_label(form.areaDanger) }}
            {{ form_widget(form.areaDanger,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.nameDanger) }}
            {{ form_widget(form.nameDanger,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.lat_danger) }}
            {{ form_widget(form.lat_danger,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.lng_danger) }}
            {{ form_widget(form.lng_danger,{'attr': {'class': 'form-control'}}) }}
        </div>

    </div>

    <button class="btn btn-primary">{{ button_label|default('Créer') }}</button>
    {{ form_end(form) }}

</div>
    
