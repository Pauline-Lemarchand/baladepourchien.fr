{% extends 'base.html.twig' %}

{% block title %}Contacts index{% endblock %}

{% block body %}
    <h1>Contacts index</h1>

    <table class="table">
        <thead>
            <tr>
             
                <th>NameContact</th>
                <th>FirstnameContact</th>
                <th>ReasonContact</th>
                <th>MessageContact</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
              
                <td>{{ contact.nameContact }}</td>
                <td>{{ contact.firstnameContact }}</td>
                <td>{{ contact.reasonContact }}</td>
                <td>{{ contact.messageContact }}</td>
                <td>
                    <a href="{{ path('app_contacts_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_contacts_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contacts_new') }}">Create new</a>
{% endblock %}
