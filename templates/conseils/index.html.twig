{% extends 'base.html.twig' %}

{% block title %}Conseils{% endblock %}

{% block body %}
<div class="archi_dash">
<a class="retour_btn" href="{{ path('dashboard') }}"> <i class="fa-solid fa-arrow-left"></i>RETOUR </a>
    <h1>Conseils</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Titre</th>
                <th>Texte du conseil</th>
                <th>Photo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for conseil in conseils %}
            <tr>
               
                <td>{{ conseil.titleConseil }}</td>
                <td>{{ conseil.textConseil }}</td>
                <td>{{ conseil.photoConseil }}</td>
                <td>
                   
                    <a class="btn" href="{{ path('app_conseils_edit', {'id': conseil.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_conseils_new') }}">Ajouter un conseil</a>
    </div>
{% endblock %}
