{% extends 'base.html.twig' %}

{% block title %}Dogs index{% endblock %}

{% block body %}
    <h1>Dogs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameDog</th>
                <th>PhotoDog</th>
                <th>RaceDog</th>
                <th>DescriptionDog</th>
                <th>AgeDog</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dog in dogs %}
            <tr>
                <td>{{ dog.id }}</td>
                <td>{{ dog.nameDog }}</td>
                <td>{{ dog.photoDog }}</td>
                <td>{{ dog.raceDog }}</td>
                <td>{{ dog.descriptionDog }}</td>
                <td>{{ dog.ageDog }}</td>
                <td>
                    <a href="{{ path('app_dogs_show', {'id': dog.id}) }}">show</a>
                    <a href="{{ path('app_dogs_edit', {'id': dog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_dogs_new') }}">Create new</a>
{% endblock %}
