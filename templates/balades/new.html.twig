{% extends 'base.html.twig' %}

{% block title %}Nouvelle Balade{% endblock %}

{% block body %}
<div class="block-edit">
    <h1 class="title-edit">Ajouter une balade</h1>
   
         {{ form_start(form, {'attr': {'class': 'formulaire'}}) }}
        <div class="block_edit_user">

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.nameBalade) }}
                    {{ form_widget(form.nameBalade, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.photoBalade) }}
                    {{ form_widget(form.photoBalade, {'attr': {'class': 'form-control-file', 'id': 'customFile'}}) }}
                </div>
            </div>

              <div class="form-group">
                {{ form_label(form.timeBalade) }}
                {{ form_widget(form.timeBalade, {'attr': {'list': 'minutes-list'}}) }}
                <datalist id="minutes-list">
                    <option value="00:10">
                    <option value="00:20">
                    <option value="00:30">
                    <option value="00:40">
                    <option value="00:50">
                    <option value="01:00">
					  <option value="01:30">
					   <option value="02:00">
                </datalist>
            </div>
            <div class="form-group">
                {{ form_label(form.areaBalade) }}
                {{ form_widget(form.areaBalade, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.latBalade) }}
                {{ form_widget(form.latBalade, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lngBalade) }}
                {{ form_widget(form.lngBalade, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.activite) }}
                {{ form_widget(form.activite, {'attr': {'class': 'form-control'}}) }}
            </div>

        </div>

        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

        {{ form_end(form) }}

</div>



<div class="niveau0_btn_autres">
		<div class="niveau1_btn_autres">
			<h3>Vous pourriez être interressé par :</h3>
		</div>
		<div class="niveau2_btn_autres">
		<a href="{{ path('app_dangers_new') }}">Ajouter un danger</a>
			<a href="{{ path('home') }}">Page d'accueil</a>
			<a href="{{ path('conseils') }}">Nos conseils</a>
			<a href="{{ path('dangers') }}">Les dangers signalés</a>
			<a href="{{ path('dangers') }}">Entrer dans le groupes</a>
			<a href="{{ path('contact') }}">Nous contacter</a>
		</div>

	</div>
    
{% endblock %}
